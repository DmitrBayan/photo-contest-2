<header>
  <nav class="navbar navbar-expand navbar-dark bg-dark fixed-top">
    <%= link_to "PhotoContest", root_path, id: "logo", class: "navbar-brand" %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupport">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <%= link_to "Users", users_path, class: "nav-link" %>
        </li>
        <li class="nav-item active">
          <%= link_to "Posts", posts_path, class: "nav-link" %>
        </li>
        <% if logged? %>
          <li class="nav-item active">
            <%= link_to "My profile", current_user, class: "nav-link" %>
          </li>
          <li class="nav-item active" >
            <%= link_to "Edit profile", edit_user_path(current_user), class: "nav-link" %>
          </li>
          <% if current_user.admin? %>
            <li class="nav-item active">
              <%= link_to "Admin panel", admin_posts_path, class: "nav-link" %>
            </li>
          <% end %>
          <li class="nav-item active" >
            <%= link_to "Log out", logout_path, method: :delete, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>