<div class="album py-5 bg-light">
	<div class="container">
		<% if @users.blank? %>
			<p class="font-weight-bold">There are no users.</p>
		<% end %>
		<div class="row">
			<% @users.each do |user| %>
				<div class="col-md-3">
					<div class="card mb-4 shadow-sm">
						<svg class="bd-placeholder-img card-img-top" width="100%" height="50" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail">
							<title><%= user.full_name %></title>
							<image href="<%= user.image_url %>"/>
						</svg>
						<div class="card-body">
							<p class="card-text d-inline-block text-truncate" style="max-width: 200px;">
								<%= user.full_name %>
							</p>
							<div class="d-flex justify-content-between align-items-center">
                				<div class="btn-group">
                  					<button type="button" class="btn btn-sm btn-outline-secondary"> <%= link_to "View", user %> </button>
                  				</div>
              				</div>
          				</div>
      				</div>
  				</div>
  			<% end %>
  		</div>
	</div>
</div>