<div class="album py-5 bg-light">
  <div class="user-container">
    <% if @users.blank? %>
      <p class="font-weight-bold">There are no users.</p>
    <% end %>
    <div class="row">
      <% @users.each do |user| %>
        <div class="col-md-3">
          <div class="card mb-4 shadow-sm">
              <div class="photo">
                <%= image_tag user.avatar.user_show.url %>
              </div>
            <div class="card-body">
              <p class="card-text d-inline-block text-truncate" style="max-width: 140px;">
                <%= user.full_name %>
              </p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <%= link_to "View", user, class: "btn btn-sm btn-outline-secondary" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>