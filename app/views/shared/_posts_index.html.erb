<div class="album py-5 bg-light">
  <div class="container">
    <% if @posts.blank? %>
      <p class="font-weight-bold">There are no posts, they may be on moderation.</p>
    <% end %>
    <div class="row">
      <% @posts.each do |post| %>
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail">
              <title><%= post.title %></title>
              <image href="<%= post.photo %>"/>
            </svg>
            <div class="card-body">
              <p class="card-text d-inline-block text-truncate" style="max-width: 200px;">
                <%= post.description %>
              </p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <%= link_to "View", post, class: "btn btn-sm btn-outline-secondary" %>
                  <%= render 'likes/like', post: post %>
                </div>
                <small class="text-muted"><%= time_ago_in_words(post.created_at) %> ago.</small>
                <small class="text-muted"><%= post.user.full_name %></small>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>