<div class="album py-5 bg-light">
  <div class="container">
    <% if @posts.blank? %>
      <p class="font-weight-bold">There are no posts.</p>
    <% end %>
    <div class="row">
      <% @posts.each do |post| %>
        <% @post = post %>
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <title><%= post.title %></title>
            <div class="photo">
              <%= image_tag post.photo.show.url %>
            </div>
            <div class="card-body">
              <p class="card-text d-inline-block text-truncate" style="max-width: 200px;">
                <%= post.description %>
              </p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <%= link_to "View", post, class: "btn btn-sm btn-outline-secondary" %>
                  <div class="like like-post-<%= post.id %> data-remote='true'">
                    <%= render 'likes/like', post: post %>
                  </div>
                </div>
                <small class="text-muted"><%= (post.created_at.to_formatted_s(:short)) %></small>
                <small class="text-muted"><%= link_to post.user.full_name, post.user %></small>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>