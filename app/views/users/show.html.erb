<% provide(:title, @user.full_name) %>

<section class="jumbotron text-center">
  <div class="container" style="padding-bottom: 17px">
    <img src=<%= @user.image_url %> alt='User' style = 'border-radius: 50%' width="200" height="200"/>
    <h1 class="jumbotron-heading"><%= @user.full_name %></h1>
    <% if current_user?(@user) %>
      <p class="lead text-muted">Would you like to post a photo?</p>
      <p>
        <%= link_to "+", new_post_url, class: "btn btn-lg btn-success" %>
      </p>
      <%= link_to "Get auth token", '',
                  data: {confirm: current_user.authenticity_token},
                  class: 'btn btn-sm btn-info' %>
    <% end %>
  </div>
  <%= render 'shared/post_state_sorting' if current_user?(@user)%>
  <%= render 'shared/posts_index' %>
</section>
