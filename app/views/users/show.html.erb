<% provide(:title, @user.name) %>
<head>
<link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css" rel="stylesheet">
</head>
<div class="container">
	<div class="row">
		<div class="col-md-offset-9 col-md-4 col-lg-offset-1 col-lg-9">
    	 <div class="well profile">
            <div class="col-sm-12">
                <div class="col-xs-12 col-sm-8">
                    <h2><%= @user.name%></h2>
                </div>             
            </div>            
            <div class="col-xs-9 divider text-center">
                <div class="col-xs-9 col-sm-4 emphasis">
                    <h2><strong> <%= Post.where(user_id: @user.id).approved.count %> </strong></h2>
                    <p><small>  Posts  </small></p>
                </div>
                <div class="col-xs-9 col-sm-4 emphasis">
                    <h2><strong><%= Like.where(user_id: @user.id).count %> </strong></h2>                    
                    <p><small>  Likes  </small></p>
                <div class="col-xs-9 col-sm-4 emphasis">
                    <h2><strong><%= Comment.where(user_id: @user.id).count %></strong></h2>                    
                    <p><small>  Comments  </small></p>
                </div>
            </div>
    	 </div>                 
		</div>
	</div>
</div>
